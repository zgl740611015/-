page{
  background: #000;
}
.content{
  position: relative;
  width:450rpx;
  perspective:500rpx;
}
.content-word{
  position: absolute;
  width:200rpx;
  height:410rpx;
  transform-origin: center top;
  transform: rotateX(60deg);
  left:50%;
  margin-left:-60rpx;
  text-align: center;
  font-size:20rpx;
  overflow: hidden;
  border:2rpx solid blueviolet; 
}
.world{
color: pink;
}

.world image{
width: 200rpx;
height: 200rpx
}

.btn{
  text-align: center;
  margin-left: 120rpx;
  width:240rpx;
  height:80rpx;
  position: absolute;
  left: 110rpx;
  top:900rpx;
  background: pink;
  color: white;
  transform: rotateX(60deg);

}
.content-move{
  top:100%;
  position: absolute;
  animation:wordMove 80s both;
}
@keyframes wordMove {
  0%{
    top:100%;
  }
  100%{
    top:-100%;
  }
}
@-webkit-keyframes wordMove {
  0%{
    top:100%;
  }
  100%{
    top:-100%;
  }
}